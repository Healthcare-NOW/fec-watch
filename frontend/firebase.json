{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {"source": "/service-worker.js", "headers": [{"key": "Cache-Control", "value": "max-age=0, no-cache"}]}
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run":  {
          "serviceId": "ccwatch-backend"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
